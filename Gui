                            moveCarmenToRaft(carmen3, 650, 425, false);
                            rightSlotOpen = false;
                        }
                    }
                } else if (leftSlotOpen == false) {/*                       REMOVE FROM LEFT            */
                    if (e.getSource().equals(deer1.missionary)){
                        if (deer1.missionaryOnRaft == true){
                            moveDeerToLand(deer1, 700, 300);
                            leftSlotOpen = true;
                        }
                    }
                    else if (e.getSource().equals(deer2.missionary)){
                        if (deer2.missionaryOnRaft == true){
