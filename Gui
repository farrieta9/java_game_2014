    @Override
    public void mouseReleased(MouseEvent e) {
        if ((carmenPos[0] > deerPos[0]) && (deerPos[0] >= 1))
        {
            System.out.println("You lose");
            if (JOptionPane.showConfirmDialog(null, "You Lose! Play again?") == 0) {
                setUp();
            } else { System.exit(0); }
        }
        else if ((carmenPos[1] > deerPos[1]) && (deerPos[1] >= 1))
        {
            System.out.println("You lose");
            if (JOptionPane.showConfirmDialog(null, "You Lost! Play again?") == 0) {
                setUp();
            } else { System.exit(0); }
        }
        else if ((carmenPos[0] == 3) && (deerPos[0] == 3))
        {

            System.out.println("You Win");
            if (JOptionPane.showConfirmDialog(null, "Winner Winner Chicken Dinner! Play again?") == 0) {
                setUp();
            } else { System.exit(0); }
        }
    }

    @Override
    public void mouseEntered(MouseEvent e) {    }

    @Override
    public void mouseExited(MouseEvent e) {   }

    @Override
    public void actionPerformed(ActionEvent e) {
       if(e.getSource() == instructions){ JOptionPane.showMessageDialog(null, "Click on deers and Carmens to move them to the raft and the opposite shore.  If at any time there are more Carmens than deers on either shore you willl lose!  At times you may need to remove all from raft before placing new things on the raft.", "Instructions", JOptionPane.PLAIN_MESSAGE); }
       else if (e.getSource() == exit){ System.exit(0); }
       else if (e.getSource() == hint){ JOptionPane.showMessageDialog(null, "Move 2 carmens, bring one back, move the other two carmens and bring one back.  Than move 2 Deers.  Once all deers are over use the carmen to bring the other two carmens to the left.", "Hint", JOptionPane.PLAIN_MESSAGE); }
       else { moveRaft(); }
    }


}

